#!/bin/sh /etc/rc.common

. /etc/functions.sh

START=50

RUN_D=/var/run/vsftpd



kill_vsftpd()
{
local otherpids
local execute
otherpids=$(ps -a 2>&1 | grep "/usr/sbin/vsftpd" | grep -v grep | awk -F " " '{print $1}')
echo "$otherpids" | while read execute
do
kill -9 ${execute} 
done
}


